<odoo>
    <data>
        <act_window id="action_all_sumup"
            name="Intégration des ventes"
            res_model="prevision.sale_sumup"
            view_mode="tree,form"
            limit="80" />


        <menuitem id="prevision_top"
            name="Prevision" />

        <menuitem id="menu_sale_sumup"
            parent="prevision_top"
            action="action_all_sumup"
            sequence="10"
            groups="" />


        <record id="form_all_sumup" model="ir.ui.view">
            <field name="name">Intégration des ventes</field>
            <field name="model">prevision.sumup</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name ="date"/>
                        <field name ="company_id"/>
                        <field name ="receipe_line_ids" string="Ligne de recette">
                            <tree string="Ligne de recette">
                                <field name ="product_sold"/>   
                                <field name ="quantity_sold"/>
                                <field name ="sale_uom"/>
                            </tree>
                        </field>
                    </group>
                </form>
            </field>
        </record>
    </data>
</odoo>