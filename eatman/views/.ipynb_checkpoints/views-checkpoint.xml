<odoo>
  <data>
    <!-- explicit list view definition -->
    <record model="ir.ui.view" id="eatman.list">
      <field name="name">product list</field>
      <field name="model">eatman.product</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="product_sold"/>
        </tree>
      </field>
    </record>

    <!-- actions opening views on models -->
    <record model="ir.actions.act_window" id="eatman.action_window">
      <field name="name">eatman window</field>
      <field name="res_model">eatman.product</field>
      <field name="view_mode">tree,form</field>
    </record>


    <!-- server action to the one above -->

    <record model="ir.actions.server" id="eatman.action_server">
      <field name="name">eatman server</field>
      <field name="model_id" ref="model_eatman_product"/>
      <field name="state">code</field>
      <field name="code">
        action = {
          "type": "ir.actions.act_window",
          "view_mode": "tree,form",
          "res_model": model._eatman,
        }
      </field>
    </record>


